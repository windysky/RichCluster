# List all source files
SOURCES=ClusterExport.cpp ClusterList.cpp ClusterManager.cpp DistanceMatrix.cpp DistanceMetric.cpp MergeStrategy.cpp RcppExports.cpp SeedMap.cpp StringUtils.cpp

# Define objects from sources
OBJECTS=ClusterExport.o ClusterList.o ClusterManager.o DistanceMatrix.o DistanceMetric.o MergeStrategy.o RcppExports.o SeedMap.o StringUtils.o

# Add additional flags if needed
PKG_CPPFLAGS=-I.

# Define the rule for making the shared library
all: $(SHLIB)

# Clean up objects after build
clean:
	@rm -f $(OBJECTS) $(SHLIB)
